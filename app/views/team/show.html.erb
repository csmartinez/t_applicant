<h2>Partners <small>We have employers from the following fields:</small></h2>
<br>
<% careers = ["Accounting", "Business", "Construction", "Education", "Engineering", "Graphic Design", "Government", "Psychology", "Sales", "Science", "Software Engineering"] %>

<div class="btn-group-vertical careerFields">
<% careers.each do |career| %>
    <a href="#<%= career %>" class="btn btn-info"><%= career %></a>
    <% end %>
</div>

<div class="partners">
    <% careers.each do |career| %>
      <h1 id="<%= career %>"><%= career %></h1>
        <% @users.each do |partner| %>
          <% if partner.admin? %>
            <% if partner.career == career %>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title blue">Senior Employer</h3>
                </div>
                <div class="panel-body">
                  <p style="font-family: helvetica;"><%= partner.goals %></p>
                  <button class="btn btn-info btn-sm ra">Request Review</button>
                </div>
              </div>
            <% end %>
        <% end %>
      <% end %>
    <% end %>
</div>
