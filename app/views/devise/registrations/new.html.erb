
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="well"><p><%= devise_error_messages! %></p></div>

          <h1>Sign Up <small>It's free!</small></h1><br>
          <table><tr>
            <td><div class="field"><h4>
              <%= f.label :firstname %>:
              <%= f.text_field :fname, autofocus: true %></h4>
            </div></td>

            <td><div class="field" style="margin-left: 40px;"><h4>
              <%= f.label :lastname %>:
              <%= f.text_field :lname, autofocus: false %></h4>
            </div></td>
          </tr><tr>
          </table>

          <table><tr>
            <td><div class="field"><h4>
              Email:<%= f.text_field :email, autofocus: false, type: "email", size: "30x1" %></h4>
            </div></td>

            </tr><tr>
            <td><div class="field"><h4>
              Desired Career:
              <br><%= f.text_field :career, autofocus: false, size: "40x1"  %></h4>
            </div></td>
            </tr><tr>

            <td><div class="field"><h4>
              Briefly describe your career goals:<br>
              <%= f.text_area :goals, autofocus: false, size: "120x4" %></h4>
            </div></td>
            </tr><tr>
          </tr>
          </table>

          <div class="field"><h4>
            Password:
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", size: "40x1" %></h4>
          </div>

          <div class="field"><h4>
            Password confirmation:<%= f.password_field :password_confirmation, autocomplete: "off", size: "40x1" %></h4>
          </div>

          <div class="actions">
            <h4><%= f.submit "Sign Up", :class => 'btn btn-info'%></h4>
          </div>
<% end %>
